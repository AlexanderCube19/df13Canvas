<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />

	<package name="com.force.aus.erp.canvas.actions" extends="struts-default">
		
		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<interceptors>
			<interceptor name="signedRequestInterceptor"
				class="com.force.aus.erp.canvas.interceptors.SignedRequestInterceptor" />
			<interceptor-stack name="defaultInterceptors">
				<interceptor-ref name="signedRequestInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="defaultInterceptors" />

		<global-results>
			<result name="noSignedRequest">/noSignedRequest.jsp</result>
		</global-results>

		<action name="home" class="com.force.aus.erp.canvas.actions.HomePageAction"	method="execute">
			<param name="pageName">Home</param>
			<result name="success" type="tiles">home.tiles</result>
		</action>

		<action name="search" class="com.force.aus.erp.canvas.actions.GenericAction" method="execute">
			<param name="pageName">Search</param>
			<result name="success" type="tiles">search.tiles</result>
		</action>

		<action name="display" class="com.force.aus.erp.canvas.actions.GenericAction" method="execute">
			<param name="pageName">Display</param>
			<result name="success" type="tiles">display.tiles</result>
		</action>		
		
	</package>

</struts>